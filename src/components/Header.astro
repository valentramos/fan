---
import { Navigation } from "../components/Navigation";
import { MobileMenu } from "../components/MobileMenu";
import { ContactModal } from "../components/ContactModal";
---

<nav
    class="bg-white dark:bg-black sm:px-4 py-2 fixed w-full z-20 top-0 left-0 border-b border-gray-200 dark:border-none"
    id="main-nav"
>
    <div class="container flex justify-between items-center mx-auto z-50">
        <a href="/" class="flex items-center">
            <img src="public/favicon.svg" class="mr-3 h-8 sm:h-8" alt="Valent Logo" />
        </a>

        <div class="flex gap-5 items-center md:order-2">
            <Navigation client:load />
            <ContactModal client:load buttonText="Solicitar una Demo" />
            <ContactModal client:load buttonText="Contactar" />
            <div class="lg:hidden">
                <MobileMenu client:load />
            </div>
        </div>
    </div>
</nav>